<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/memberships"
    tools:context="com.example.dell.arsenaldelhi.About_us">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>
    <View
        android:id="@+id/verticalSeperatorHours"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_height="10dp"
        android:background="#D50000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bold_text"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textSize="20dp"
        android:textColor="#212121"
        android:text="Arsenal Delhi Supporters Club Membership"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:paddingTop="10dp"
    android:text="Our supporters club is here to serve you.It is not a profit making exercise.The money we recieve in membership will go towards running the app and website,creating merchandise for the club to on sell or give away.It will help us to promote the club,enter teams into competitions."/>

<ListView
    android:layout_width="match_parent"
    android:id="@+id/members_list"
    android:layout_height="wrap_content"></ListView>
</LinearLayout>